<div class="container">
  <div class="row justify-content-center align-items-center">
    <div class="col-sm-2 col-md-4 col-lg-12">

      <%= link_to 'Create new listing', listings_new_path, class: 'btn' %>
      <div class="cards">
        <ul>
          <% @listings.each do |item| %>
          <div class="card">
            <img src="https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1721&q=80" alt="">
            <li class="title"><%= link_to item.title, listing_path(item.id) %></li>
            <li class="price">$<%= item.price_per_day %> AUD/day</li>
            <%# <%= link_to 'Delete', listing_path(item), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
